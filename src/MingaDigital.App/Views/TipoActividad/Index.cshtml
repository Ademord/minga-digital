@model IList<TipoActividad>

@{
  ViewBag.Title = "Tipos de actividad";
}

<h1>
  Actividades
  <a href="@Url.Action("Create")" class="btn btn-primary pull-right">Nuevo tipo</a>
</h1>

<div class="panel panel-default" >

  <div class="panel-heading"><b>@Model.Count @ViewBag.Title.ToLower()</b></div>

  <div class="table-responsive">
    <table class="table table-hover entity-table">
      <thead>
        <!-- intentionally empty -->
      </thead>
      <tbody>
      @foreach (var kind in Model)
      {
        <tr class="entity-row">
          <td>
            @kind.Descripcion
          </td>
          <td class="text-right">
            <a href="@Url.Action("Update", new { id = kind.Id })" class="btn btn-xs btn-link" aria-label="Modificar">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
            </a>
            <a href="@Url.Action("Delete", new { id = kind.Id })" class="btn btn-xs btn-link" aria-label="Eliminar">
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Eliminar
            </a>
          </td>
        </tr>
      }
      </tbody>
    </table>
  </div>

</div>