@model IEnumerable<TipoActividad>

@{
  ViewBag.Title = "Tipos de actividad";
}

<h1>
  @ViewBag.Title
  <a class="btn btn-primary pull-right" href="@Url.Action("Create")">Nuevo</a>
</h1>

<div class="table-responsive">
  <table class="table table-hover entity-table">
    <thead>
      <tr>
        <th>Descripcion</th>
        <th class="action-column">Acciones</th>
      </tr>
    </thead>
    <tbody>
    @foreach (var kind in Model)
    {
      <tr class="entity-row">
        <td>
          @kind.Descripcion
        </td>
        <td class="text-right">
          <a class="btn btn-xs btn-warning" aria-label="Modificar" href="@Url.Action("Update", new { id = kind.Id })">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          </a>
          <a class="btn btn-xs btn-danger" aria-label="Eliminar" href="@Url.Action("Delete", new { id = kind.Id })">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          </a>
        </td>
      </tr>
    }
    </tbody>
  </table>
</div>