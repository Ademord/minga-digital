@model PersonaFisicaIndexModel

@{
    ViewBag.Title = "Personas FÃ­sicas";
}

<h2 class="page-header">
  @ViewBag.Title
</h2>

<div class="panel panel-default with-table">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-8">
        <a class="btn btn-primary btn-sm" href="@Url.Action("Create")">
          <span class="glyphicon glyphicon-file"></span>
          Nuevo
        </a>
      </div>
      <div class="col-md-4">
        
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Nombres</th>
          <th>Apellidos</th>
          <th>NIT</th>
          <th width="90%"><!-- spacer --></th>
          <th><!-- actions --></th>
        </tr>
      </thead>
      
      <tbody>
      @if (!Enumerable.Any(Model.Table.Rows))
      {
        <tr>
          <td colspan="5">No hay registros.</td>
        </tr>
      }
      @foreach (var row in Model.Table.Rows)
      {
        var id = row.PersonaFisicaId;
        
        <tr>
          <td>@row.Nombres</td>
          <td>@row.Apellidos</td>
          <td>@row.Nit</td>
          
          <td><!-- spacer --></td>
          
          <td class="text-right">
          @if (row.UsuarioId == null)
          {
            <a href="@Url.Action("CreateUser", new { id = id })" class="btn btn-xs btn-primary">
              <span class="glyphicon glyphicon-user"></span>
              Crear Usuario
            </a>
          }
          else
          {
            <a href="@Url.Action("Detail", "Usuario", new { id = row.UsuarioId.Value })" class="btn btn-xs btn-default">
              <span class="glyphicon glyphicon-user"></span>
              Ver Usuario
            </a>
          }
            
            <a href="@Url.Action("Update", new { id = id })" class="btn btn-xs btn-default">
              <span class="glyphicon glyphicon-pencil"></span>
              Modificar
            </a>
            
            <a href="@Url.Action("Delete", new { id = id })" class="btn btn-xs btn-default">
              <span class="glyphicon glyphicon-remove"></span>
              Eliminar
            </a>
          </td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>